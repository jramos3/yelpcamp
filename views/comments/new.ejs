<% include ../partials/header %>

<div class="container">
  <h1 class="text-center font-weight-light">Add New Comment to <%= campground.name %></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto mt-3">
      <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
        <div class="form-group">
          <textarea
            class="form-control"
            name="comment[text]"
            rows="5"
            placeholder="Enter comment here..."></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Submit
          </button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
